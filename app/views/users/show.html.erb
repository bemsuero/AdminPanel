<% if u_logged_in? || current_admin != nil %>
<h2>Welcome <%= @current_user.first_name%> <%= @current_user.last_name%> </h2>
<h3>Instructor Profile</h3>
<h3>Employee ID: <%=@current_user.employee_id%></h3>
<% if @current_user.photo.attached? %>
<%= image_tag(@current_user.photo) %>
<%else%>
<p>User has not attached photo yet.</p>
<%end%>


<ul>
  <li><%= link_to "Edit Profile", edit_user_path(@current_user) %></li>
</ul>

<h3>Courses assigned so far:</h3>
<% if @current_user.courses.empty? %>
<p>No courses added yet!</p>
<% else %>
<% @current_user.courses.each do |courses| %>
<h5><big><%= link_to "#{courses.name}", user_course_path(@current_user.id, courses.id) %></big> / <small> <%= link_to "Edit Course", edit_user_course_path(@current_user.id, courses.id) %> </small>
</h5>
<%end%>
<%end%>
<% if current_admin != nil %>

<%= link_to "Create Course", new_user_course_path(@current_user.id) %>
<%end%>

<%else%>
<p>You do not have access to this.</p>
<%end%>
