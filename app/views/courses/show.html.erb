<h2> <%= @course.name%> Landing Page </h2>


<p> Description: <%= @course.description %> </p>
<p> Total Hours: <%= @course.hours %> </p>

<h3>Cohorts for this course</h3>
<% if @cohorts.count == 0 %>
<p>No cohorts added yet!</p>
<% else %>
<% @cohorts.each do |c| %>
<%= c.name %>
<%end%>
<%end%>

<% if current_admin != nil %>
<p><%= link_to "Add Cohort", new_user_cohort_path(@user.id) %></p>
<p><%= link_to "Edit Course", edit_user_course_path %></p>
<%= link_to 'Back', :back %>
<%end%>
